# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Change these settings to your own preference
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

# see: C# coding style: http://git.io/vtghT
# see: C# VS settings:  http://git.io/vtghu
# VS defaults as default settings
[*.cs]
end_of_line = crlf
indent_size = 4
